<style>
    select, textarea, input{
        font-size: 1rem !important;
        color: #6e707e !important;
    }
    .cancelButton{
        margin-left: 6%;
    }
    .form-control{
        background-color: #f3f2f2 !important;
        border: 0px solid #d1d3e2!important;
    }
</style>
 <div class="container-fluid create-task">
    <div class="card shadow mb-4 list">
       <div class="card-body input-border">
          <div class="row">
             <div class="col-md-12">
                    <h2>Edit category</h2>
                <div class="row">
                   <div class="col-md-8">
                      <div class="breadcrumb">
                         <div class="col-md-12">
                            <!-- <input type="hidden" (ngModel)="catid" (input)="catid=this" value="{{ cat_id }}"> -->
                            <input type="text" (ngModel)="title" (input)="catid=this" (input)="title=$event.target.value" value="{{ selectedCat }}" class="form-control" name="t" placeholder="Enter$
                         </div>
                      </div>
                   </div>
                </div>
             </div>
             <div class="col-md-12 button-my-sty">
                <button type="button" class="btn btn-success cursorPointer" (click)="update()">UPDATE &amp;  CLOSE</button>
                <button type="button" class="btn btn-danger cancelButton" (click)="cancel()">CANCEL</button>
             </div>
          </div>
       </div>
    </div>
 </div>
 <div id="snackbar">{{alertMessage}}</div>
